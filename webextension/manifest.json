{
	"manifest_version": 2,
	"name": "IDnomic blockchain PKI",
	"version": "0.1",
	"description": "Check if certificates used by TLS have been added in the IDnomic blockchain",
	"background": {
	  "scripts": ["ledger-pki.js"]
	},
	"permissions": [
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"icons": {
	  "48": "icons/favicon.ico"
	},
	"browser_action": {
	  "default_icon": "icons/favicon.ico",
	  "default_title": "Check certificate state",
	  "default_popup": "popup/cert_states.html"
	}
}
